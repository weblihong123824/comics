{
  "name": "@comic/admin-server",
  "version": "0.1.0",
  "type": "module",
  "config": {
    "dbName": "comic-dev"
  },
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:deploy": "./scripts/deploy-db.sh",
    "d1:g": "drizzle-kit generate --config drizzle.config.d1.json",
    "d1:up": "npx wrangler d1 migrations apply $npm_package_config_dbName",
    "d1:up:remote": "npx wrangler d1 migrations apply $npm_package_config_dbName --remote",
    "d1:status": "npx wrangler d1 migrations list $npm_package_config_dbName",
    "d1:status:remote": "npx wrangler d1 migrations list $npm_package_config_dbName --remote",
    "d1:execute": "npx wrangler d1 execute $npm_package_config_dbName",
    "d1:execute:remote": "npx wrangler d1 execute $npm_package_config_dbName --remote",
    "d1:migrate": "./scripts/migrate-d1.sh",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy:full": "npm run db:deploy && npm run deploy"
  },
  "dependencies": {
    "@comic/shared-types": "workspace:*",
    "@comic/ui-components": "workspace:*",
    "@comic/utils": "workspace:*",
    "@react-router/node": "^7.7.1",
    "@react-router/serve": "^7.7.1",
    "@tanstack/react-query": "^5.87.4",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.36.4",
    "isbot": "^5.1.27",
    "lucide-react": "^0.544.0",
    "nanoid": "^5.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@react-router/dev": "^7.7.1",
    "@tailwindcss/vite": "^4.1.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "drizzle-kit": "^0.30.0",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}